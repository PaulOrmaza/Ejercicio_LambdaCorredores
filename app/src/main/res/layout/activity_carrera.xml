<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simulación de Carrera"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#22FFCB"
            android:layout_marginBottom="16dp" />

        <!-- Tarjeta para el formulario -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vista"
            android:padding="16dp"
            android:orientation="vertical"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <!-- Entrada para el número de corredores -->
            <EditText
                android:id="@+id/edit_num_corredores"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Número de corredores"
                android:inputType="number"
                android:backgroundTint="#22FF59"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Entrada para la distancia -->
            <EditText
                android:id="@+id/edit_distancia"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Distancia (metros)"
                android:inputType="number"
                android:backgroundTint="#22FF59"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Botón para simular la carrera -->
            <Button
                android:id="@+id/btn_simular_carrera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simular Carrera"
                android:backgroundTint="#22FF59"
                android:textColor="#FFFFFF"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:minWidth="150dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <!-- Título de resultados -->
        <TextView
            android:id="@+id/txt_resultado_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultados de la carrera"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Resultados de la carrera -->
        <LinearLayout
            android:id="@+id/layout_resultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp">
        </LinearLayout>
    </LinearLayout>
</ScrollView>
